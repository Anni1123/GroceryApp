<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfieEditSellerActivity">
    <RelativeLayout
        android:id="@+id/toolbars"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:background="@drawable/shape_rec01">
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_left"
            android:id="@+id/backbtnuser"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_gps"
            android:id="@+id/gpsbtn"
            android:layout_alignParentEnd="true"
            android:background="@null"/>
    </RelativeLayout>
    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/toolbars"
        android:id="@+id/profiletvuser"
        android:layout_centerHorizontal="true"
        app:c_border="true"
        android:src="@drawable/ic_profile"
        app:c_border_color="@color/colorPrimary"
        app:c_border_width="1dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profiletvuser"
        android:hint="Full Name"
        android:id="@+id/nameuser"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_profile"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:inputType="textPersonName|textCapWords"
        android:background="@drawable/shape_rec02"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameuser"
        android:hint="Shop Name"
        android:id="@+id/shop"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_store"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:inputType="textPersonName|textCapWords"
        android:background="@drawable/shape_rec02"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop"
        android:hint="Phone"
        android:id="@+id/phoneuser"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:inputType="phone"
        android:background="@drawable/shape_rec02"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneuser"
        android:hint="Delivery Fee"
        android:id="@+id/delivery"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_shpping"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:inputType="numberDecimal"
        android:background="@drawable/shape_rec02"/>
    <LinearLayout
        android:id="@+id/addresslistuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/delivery">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country"
            android:id="@+id/country"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="5dp"
            android:layout_margin="5dp"
            android:inputType="textPostalAddress"
            android:layout_weight="1"
            android:background="@drawable/shape_rec02"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State"
            android:id="@+id/state"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="5dp"
            android:layout_margin="5dp"
            android:inputType="textPostalAddress"
            android:layout_weight="1"
            android:background="@drawable/shape_rec02"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:id="@+id/city"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="5dp"
            android:layout_margin="5dp"
            android:inputType="textPostalAddress"
            android:layout_weight="1"
            android:background="@drawable/shape_rec02"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addresslistuser"
        android:hint="Complete Address"
        android:id="@+id/addressuser"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="5dp"
        android:layout_margin="5dp"
        android:inputType="textPostalAddress|textMultiLine"
        android:background="@drawable/shape_rec02"/>
    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopopen"
        android:layout_margin="5dp"
        android:layout_below="@id/addressuser"
        android:text="Shop Open"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update"
        android:text="Update"
        android:minWidth="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shopopen"
        style="@style/Widget.AppCompat.Button.Colored"
        />
</RelativeLayout>